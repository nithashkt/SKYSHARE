<br>

<div class="col-sm-3">
  <br><h1><a href="/dashboard">Dashboard</a></h1>

      
</div>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
            <i class="fas fa-store"></i> Editor
        </h1>
        <% if(typeof errors != 'undefined'){ %> <% errors.forEach(function(error) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= error.msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% }); %> <% } %> 
          
          <% if(success_msg != ''){ %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success_msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% } %> 
          
          <% if(error_msg != ''){ %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error_msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% } %> 
        <form action="/addstudent" method="POST">

          <div class="form-group">
            <label for="fullname">Code Title</label>
            <input
              type="name"
              id="code_title"
              name="code_title"
              class="form-control"
              placeholder="Enter title"
              value="<%= typeof code_title != 'undefined' ? code_title : '' %>"
            />
          </div>

          <div class="form-group">
            <label for="reg_no">Code Desc</label>
            <input
              type="name"
              id="code_desc"
              name="code_desc"
              class="form-control"
              placeholder="Enter Register Number"
              value="<%= typeof code_desc != 'undefined' ? code_desc : '' %>"
            />
          </div>

      

          <div class="form-group">
          <label for="code_new">Enter your code here:</label>
            <textarea
            id="code_new" 
            name="code_new" 
            rows="20" cols="65"
            placeholder="Enter your code here" 
            value="<%= typeof code_new != 'undefined' ? code_new : '' %>"
            ><%= typeof code_new != 'undefined' ? code_new : '' %></textarea>
          </div>

          <button type="submit" class="btn btn-primary btn-block">
            Submit
          </button>
        </form>
        <p class="lead mt-4">Go back? <a href="/dashboard">Home</a></p>
      </div>
    </div>
  </div>
  